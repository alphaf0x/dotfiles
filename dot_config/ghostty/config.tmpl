font-family = "JetBrainsMono NF"
config-file = alpha-y2k-dark
shell-integration = fish
{{- if eq .chezmoi.os "darwin" }}
command = "/opt/homebrew/bin/fish -l"
{{- else }}
command = "/usr/bin/fish -l"
{{- end }}

keybind = super+a=ignore

# Visual
background-blur = true
background-opacity = 0.78
unfocused-split-opacity = 0.7
custom-shader = shaders/cubes.glsl
custom-shader = shaders/bloom025.glsl
# MacOS specific options
{{- if eq .chezmoi.os "darwin" }}
# MacOS specific options
macos-icon = glass
{{- end }}

quick-terminal-animation-duration = 0.1

# Opens a small terminal window at the top of your screen
keybind = global:cmd+s=toggle_quick_terminal
keybind = super+i=inspector:toggle
